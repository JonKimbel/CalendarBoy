<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CalendarView">
        <attr name="backgroundFill" format="color" />
        <attr name="backgroundStroke" format="color" />
        <attr name="backgroundRadius" format="dimension" />

        <attr name="dividerStroke" format="color" />
        <attr name="dividerStrokeWidth" format="dimension" />
        <attr name="dividerDashOnDistance" format="dimension" />
        <attr name="dividerDashOffDistance" format="dimension" />

        <attr name="contentFill" format="color" />
        <attr name="contentStroke" format="color" />
        <attr name="contentRadius" format="dimension" />
        <attr name="contentPadding" format="dimension" />

        <attr name="textFill" format="color" />
        <attr name="textSize" format="dimension" />
    </declare-styleable>

    <color name="CalendarView_defaultBackgroundFill">#FFFFFF</color>
    <color name="CalendarView_defaultBackgroundStroke">#55000000</color>
    <dimen name="CalendarView_defaultBackgroundRadius">4dp</dimen>

    <color name="CalendarView_defaultDividerStroke">#55000000</color>
    <dimen name="CalendarView_defaultDividerStrokeWidth">0.75dp</dimen>
    <dimen name="CalendarView_defaultDividerDashOnDistance">8dp</dimen>
    <dimen name="CalendarView_defaultDividerDashOffDistance">8dp</dimen>

    <color name="CalendarView_defaultContentFill">#3F51B5</color>
    <color name="CalendarView_defaultContentStroke">#55000000</color>
    <dimen name="CalendarView_defaultContentRadius">4dp</dimen>
    <dimen name="CalendarView_defaultContentPadding">8dp</dimen>

    <color name="CalendarView_defaultTextFill">#FFEEEEEE</color>
    <dimen name="CalendarView_defaultTextSize">16sp</dimen>
</resources>